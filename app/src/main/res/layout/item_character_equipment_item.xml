<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ny.gelato.extessera.feature.character.view_model.EquipmentModel"/>

        <variable
            name="parent"
            type="ny.gelato.extessera.base.BaseView"/>

        <import type="android.view.View"/>

        <import type="com.robinhood.ticker.TickerUtils"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:clipToPadding="false"
        android:foreground="?selectableItemBackground"
        android:onClick="@{(v) -> parent.onClick(v, viewModel)}"
        app:cardCornerRadius="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="@{viewModel.name}"
                tools:text="Arrows"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:alpha=".87"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:maxLines="1"
                android:text="@{viewModel.showAmount()}"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:visibility="@{viewModel.isEmpty() || viewModel.amount == 1 ? View.GONE : View.VISIBLE}"
                tools:text="20"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>