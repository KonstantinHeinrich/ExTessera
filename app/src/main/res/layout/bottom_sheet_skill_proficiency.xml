<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sheet"
            type="android.support.design.widget.BottomSheetDialog"/>

        <variable
            name="viewModel"
            type="ny.gelato.extessera.feature.character_sheet.view_model.SkillModel"/>

        <variable
            name="presenter"
            type="ny.gelato.extessera.feature.character_sheet.CharacterPresenter"/>

        <import type="android.view.View"/>

        <import type="ny.gelato.extessera.data.model.character.Skill.Type"/>

        <import type="ny.gelato.extessera.data.model.character.Skill.Proficiency"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="32dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:alpha=".87"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="@{viewModel.type.formatted}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    tools:text="Sleight of Hand"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:alpha=".54"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="@{viewModel.showStat()}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    tools:text="(Dexterity)"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="32dp"
                android:background="@color/grey_300"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:onClick="@{() -> presenter.save(viewModel.none(sheet))}"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:visibility="@{viewModel.jackOfAllTrades ? View.GONE : View.VISIBLE}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_proficiency_none"
                    android:tint="@{viewModel.proficiency == Proficiency.NONE ? @color/colorAccent : @android:color/tertiary_text_light}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="No Proficiency"
                    android:textColor="@{viewModel.proficiency == Proficiency.NONE ? @color/colorAccent : @android:color/tertiary_text_light}"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:onClick="@{() -> presenter.save(viewModel.none(sheet))}"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:visibility="@{viewModel.jackOfAllTrades ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_proficiency_half"
                    android:tint="@{viewModel.proficiency == Proficiency.NONE ? @color/colorAccent : @android:color/tertiary_text_light}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="Jack of all Trades"
                    android:textColor="@{viewModel.proficiency == Proficiency.NONE ? @color/colorAccent : @android:color/tertiary_text_light}"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:onClick="@{() -> presenter.save(viewModel.full(sheet))}"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_proficiency_full"
                    android:tint="@{viewModel.proficiency == Proficiency.FULL ? @color/colorAccent : @android:color/tertiary_text_light}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="Proficient"
                    android:textColor="@{viewModel.proficiency == Proficiency.FULL ? @color/colorAccent : @android:color/tertiary_text_light}"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:onClick="@{() -> presenter.save(viewModel.expert(sheet))}"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_proficiency_expert"
                    android:tint="@{viewModel.proficiency == Proficiency.EXPERT ? @color/colorAccent : @android:color/tertiary_text_light}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="Expert"
                    android:textColor="@{viewModel.proficiency == Proficiency.EXPERT ? @color/colorAccent : @android:color/tertiary_text_light}"/>

            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>
