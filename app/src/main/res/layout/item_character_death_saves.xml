<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ny.gelato.extessera.feature.character_sheet.view_model.DeathSaveModel"/>

        <variable
            name="presenter"
            type="ny.gelato.extessera.feature.character_sheet.CharacterPresenter"/>

        <import type="android.view.View"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:clipToPadding="false"
        app:cardCornerRadius="0px"
        app:contentPaddingBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ny.gelato.extessera.common.AvatarView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="8dp"
                        android:onClick="@{(v) -> presenter.click(v, viewModel.avatar)}"
                        android:onLongClick="@{() -> presenter.longClick(viewModel.avatar.toggleInspiration())}"
                        bind:viewModel="@{viewModel.avatar}"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:alpha=".87"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Death Saves"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>


                    <ImageView
                        android:id="@+id/edit_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:alpha=".87"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:onClick="@{(v) -> presenter.click(v, viewModel.edit())}"
                        android:paddingBottom="12dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="12dp"
                        android:src="@drawable/ic_more_vert"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="80dp"
                    android:background="@color/grey_300"/>

            </FrameLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:baselineAligned="false">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".25"/>

                <TextView
                    android:id="@+id/success_text"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="Successes"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"/>

                <TextView
                    android:id="@+id/failure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:text="Failures"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"/>

                <CheckBox
                    android:id="@+id/success1"
                    style="@android:style/Widget.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.successes > 0}"
                    android:onClick="@{(v) -> presenter.click(v, viewModel.setSuccess(viewModel.successes > 0 ? 0 : 1))}"
                    app:layout_constraintEnd_toStartOf="@+id/success2"
                    app:layout_constraintStart_toEndOf="@+id/guideline"/>

                <CheckBox
                    android:id="@+id/failure1"
                    style="@android:style/Widget.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.failures > 0}"
                    android:onClick="@{(v) -> presenter.click(v, viewModel.setFailure(viewModel.failures > 0 ? 0 : 1))}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/failure2"
                    app:layout_constraintStart_toEndOf="@+id/guideline"/>


                <CheckBox
                    android:id="@+id/success2"
                    style="@android:style/Widget.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.successes > 1}"
                    android:onClick="@{(v) -> presenter.click(v, viewModel.setSuccess(viewModel.successes > 1 ? 1 : 2))}"
                    app:layout_constraintEnd_toStartOf="@+id/success3"
                    app:layout_constraintStart_toEndOf="@+id/success1"/>


                <CheckBox
                    android:id="@+id/failure2"
                    style="@android:style/Widget.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.failures > 1}"
                    android:onClick="@{(v) -> presenter.click(v, viewModel.setFailure(viewModel.failures > 1 ? 1 : 2))}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/failure3"
                    app:layout_constraintStart_toEndOf="@+id/failure1"/>


                <CheckBox
                    android:id="@+id/success3"
                    style="@android:style/Widget.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.successes > 2}"
                    android:onClick="@{(v) -> presenter.click(v, viewModel.setSuccess(viewModel.successes > 2 ? 2 : 3))}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/success2"/>

                <CheckBox
                    android:id="@+id/failure3"
                    style="@android:style/Widget.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.failures > 2}"
                    android:onClick="@{(v) -> presenter.click(v, viewModel.setFailure(viewModel.failures > 2 ? 2 : 3))}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/failure2"/>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>