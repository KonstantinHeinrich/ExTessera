<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sheet"
            type="android.support.design.widget.BottomSheetDialog"/>

        <variable
            name="viewModel"
            type="ny.gelato.extessera.feature.character_sheet.view_model.EquipmentModel"/>

        <variable
            name="presenter"
            type="ny.gelato.extessera.feature.character_sheet.CharacterPresenter"/>

        <import type="android.view.View"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"
                    android:alpha=".87"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@{viewModel.editable ? @string/equipment_item_new : viewModel.name}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    tools:text="New Equipment Item"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:alpha=".87"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{() -> presenter.save(viewModel.save())}"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_save_white"
                    android:tint="@color/colorAccent"
                    android:visibility="@{viewModel.editable &amp;&amp; !viewModel.isEmpty() ? View.VISIBLE : View.GONE}"
                    tools:src="@drawable/ic_save_white"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="8dp"
                android:background="@color/grey_300"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="Item name"
                android:maxLines="1"
                android:inputType="textCapSentences"
                android:onTextChanged="@{(text, i, x, y) -> viewModel.setName(text)}"
                android:textColor="@android:color/secondary_text_light"
                android:visibility="@{viewModel.editable ? View.VISIBLE : View.GONE}"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="Amount"
                android:inputType="number"
                android:maxLength="9"
                android:onTextChanged="@{(amount, i, x, y) -> viewModel.setChange(amount)}"
                android:textColor="@android:color/secondary_text_light"
                android:visibility="@{viewModel.editable ? View.GONE : View.VISIBLE}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:alpha=".87"
                android:layoutDirection="rtl"
                android:visibility="@{viewModel.editable ? View.INVISIBLE : View.VISIBLE}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_gravity="end"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{(v) -> presenter.save(viewModel.remove(sheet))}"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="Add"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{(v) -> presenter.save(viewModel.add(sheet))}"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="Remove"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>
