<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="ny.gelato.extessera.feature.edit_character.edit_proficiencies.EditProficiencyModel"/>
    </data>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:foreground="?selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:alpha=".87"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:text="@{viewModel.proficiency}"
                tools:text="Three-Dragon Ante set"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:onCheckedChanged="@{(cb, isChecked) -> viewModel.toggleIsChecked(isChecked)}"
                android:checked="@{viewModel.checked}"/>

        </FrameLayout>

</layout>